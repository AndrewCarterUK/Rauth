{
    "name": "SitePoint/Rauth",
    "type": "library",
    "description": "A basic annotation-based ACL package",
    "keywords": [
        "SitePoint",
        "Rauth"
    ],
    "homepage": "https://github.com/SitePoint/Rauth",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Skvorc",
            "email": "bruno@skvorc.me",
            "homepage": "https://bitfalls.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "SitePoint\\Rauth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SitePoint\\Rauth\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
